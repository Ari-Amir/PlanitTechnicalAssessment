pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'dotnet restore'
                bat 'playwright install'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'dotnet test'
            }
        }
        stage('Generate Allure Report') {
            steps {
                bat 'allure generate allure-results --clean -o allure-report'
            }
        }
    }
    post {
        always {
            allure([
                results: [[path: 'allure-results']]
            ])
        }
    }
}